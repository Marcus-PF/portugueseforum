{
  "compilerOptions": {
    "target": "es2022",
    "module": "esnext",
    "moduleResolution": "node",
    "lib": ["es2022", "dom"],
    "allowImportingTsExtensions": true,
    "noEmit": true,
    "esModuleInterop": false,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "jsx": "preserve",
    "baseUrl": ".",
    "paths": {
      "@pfsa/data": ["libs/data/src"],
      "@pfsa/utils/backend": ["libs/data/src/utils/backend"],
      "@pfsa/utils/frontend": ["libs/data/src/utils/frontend"],
      "@pfsa/utils/shared": ["libs/data/src/utils/shared"],
      "@pfsa/ui": ["libs/ui/src"],
      "@pfsa/ui/global": ["libs/ui/src/styles/globals.css"],
      "@pfsa/i18n": ["apps/forum/src/app/i18n"]
    }
  }
}
