{
  "compilerOptions": {
    "target": "es2022",
    "module": "esnext",
    "moduleResolution": "node",
    "lib": ["es2022", "dom"],
    "allowImportingTsExtensions": true,
    "noEmit": true,
    "esModuleInterop": false,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "jsx": "preserve",
    "baseUrl": ".",
    "paths": {
      "@pfsa/api-client": ["libs/api-client/src"],
      "@pfsa/auth": ["libs/auth/src/index.ts"],
      "@pfsa/constants": ["libs/data/src/constants"],
      "@pfsa/data": ["libs/data/src"],
      "@pfsa/dto": ["libs/data/src/dto"],
      "@pfsa/i18n": ["libs/i18n/src"],
      "@pfsa/mocks": ["libs/data/src/mocks"],
      "@pfsa/models": ["libs/data/src/models"],
      "@pfsa/schemas": ["libs/data/src/schemas"],
      "@pfsa/services": ["libs/data/src/services"],
      "@pfsa/ui": ["libs/ui/src"],
      "@pfsa/ui/global": ["libs/ui/src/styles/globals.css"],
      "@pfsa/utils/backend": ["libs/data/src/utils/backend"],
      "@pfsa/utils/frontend": ["libs/data/src/utils/frontend"],
      "@pfsa/utils/shared": ["libs/data/src/utils/shared"]
    }
  }
}
