{
  "compilerOptions": {
    "target": "es2022",
    "module": "esnext",
    "moduleResolution": "node",
    "lib": ["es2022", "dom"],
    "esModuleInterop": false,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "jsx": "preserve",
    "baseUrl": ".",
    "paths": {
      "@pfsa/data": ["libs/data/src"],
      "@pfsa/ui": ["libs/ui/src"],
      "@pfsa/ui/global": ["libs/ui/src/styles/globals.css"]
    }
  }
}
